<!DOCTYPE html>
<html>
<head>
    <title>User</title>
    <style>
        .container {
            text-align: center;
            margin-top: 50px;
        }

        .logged-in-user {
            height: 100px;
            font-size: 40px;
        }

        .form-container {
           align-content: center;
        }

        .login-register-container {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          margin-top: 20px;
        }
        
        .field_m {
          width: 250px;
          height: 40px;
          background-color: #f4f4f4;
          border: 2px solid #474747;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .login-register-container a {
            display: inline-block;
            background-color: #e7e5e5;
            border: 1px solid #d1d1d1;
            color: black;
            text-decoration: none;
        }

        input[type="submit"] {
            padding: 10px 20px;
             background-color: #e7e5e5;
             border: 1px solid #d1d1d1;
            cursor: pointer;
        }
        .field_m a:hover {
          background-color: #45a049;
          color: white;
        }
        
    </style>
</head>
<body>
<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <p class="logged-in-user">Добро пожаловать, <b>@User.Identity.Name!</b></p>
            <form method="post" asp-controller="Account" asp-action="Logout" class="form-container">
                <input type="submit" value="Выход" class="checke"/>
            </form>
        </div>
    }
    else
    {
        <div class="login-register-container">
            <div class="field_m" style="margin-bottom: 10px">
                <a style="width: 100%;height: 100%" asp-controller="Account" asp-action="Login">Вход</a>
            </div>
            <div class="field_m">
                <a style="width: 100%;height: 100%" asp-controller="Account" asp-action="Register">Регистрация</a>
            </div>
        </div>
    }
</div>
</body>
</html>