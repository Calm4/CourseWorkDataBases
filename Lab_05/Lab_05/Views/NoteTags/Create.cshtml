@model Lab_05.ViewModels.EditNoteTagViewModel

@{
    ViewBag.Title = "Добавление тэга";
}

<!DOCTYPE html>
<html>
<head>
    <title>Добавление тэга</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }
        
        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 1.5em;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            outline: none;
            border-radius: 3px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            padding: 10px 20px;
            background-color: #e7e5e5;
            border: 1px solid #d1d1d1;
            cursor: pointer;
            color: black;
            font-weight: bold;
            border-radius: 3px;
        }
    </style>
</head>
<body>
    <div>
        <form asp-controller="NoteTags" asp-action="Create">
            <h2>Добавление тэга</h2>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="TagName">Тэг</label>
                <input type="text" asp-for="TagName" />
            </div>
            <button type="submit">Добавить</button>
        </form>
    </div>
</body>
</html>