@model Lab_05.ViewModels.EditNoteViewModel

@{
    ViewBag.Title = "Изменение заметки";
}

<!DOCTYPE html>
<html>
<head>
    <title>"Notes"</title>
    <style>
        .form-cell {
            background-color: #f7e2be;
        }

        button {
            margin-top: 10px;
            background-color: #d48b17;
            border: 1px solid #000000;
            width: 150px;
            height: 40px;
            color: white;
            cursor: pointer;
        }

        textarea {
            resize: none;
        }
    </style>
</head>
<body>
    <div style="padding: 10px; background-color: #f2cc8f;">
        <form asp-controller="Notes" asp-action="Edit">
            <h2 class="display-6">Изменение заметки</h2>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Заголовок заметки</label>
                <input type="text" asp-for="Title" class="form-control form-cell" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание</label>
                <textarea class="form-control form-cell" asp-for="Description" id="description" name="Description" required></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label>Статус</label>
                <select id="status" class="form-control form-cell" asp-for="SelectedNoteStatusId" asp-items="Model.NoteStatuses"></select>
            </div>
            <div class="form-group">
                <label>Тэг</label>
                <select id="tag" class="form-control form-cell" asp-for="SelectedNoteTagId" asp-items="Model.NoteTags"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime">Дата начала выполнения:</label>
                @Html.EditorFor(model => model.StartDateTime, new { htmlAttributes = new { @class = "form-control form-cell", @name = "StartDateTime", @asp_for = "StartDateTime" } })
                <span asp-validation-for="StartDateTime"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime">Дата конца выполнения:</label>
                @Html.EditorFor(model => model.EndDateTime, new { htmlAttributes = new { @class = "form-control form-cell", @name = "EndDateTime", @asp_for = "EndDateTime" } })
                <span asp-validation-for="EndDateTime"></span>
            </div>

            <button type="submit">Изменить</button>
        </form>
    </div>
</body>
</html>
